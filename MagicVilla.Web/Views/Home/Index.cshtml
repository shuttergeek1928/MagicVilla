@using Microsoft.AspNetCore.Components
@model IEnumerable<MagicVilla.Web.Models.Villa.VillaViewModel>

@{
    ViewData["Title"] = "Villa";
}

<img class="d-block w-100" src="~/images/vu-anh-TiVPTYCG_3E-unsplash.jpg" alt="" />

<hr />
<div class="row" style="--bs-gutter-x:0">
    @foreach (var item in Model)
    {
        <div class="p-4 col-md-12 col-lg-6">
            <div class="row" style="border-radius:20px; border:1px solid #000000">
                <div class="col-4">
                    <img class="d-block w-100" style="border-radius:20px;" src="@item.ImageUrl" alt="First slide" />
                </div>
                <div class="col-8">
                    <p class="card-title text-warning" style="font-size:xx-large">@item.Name</p>
                    <p class="card-title">
                        @((MarkupString)item.Details)
                    </p>
                </div>
                <div class="col-12">
                    <div class="row pd-3 pt-2">
                        <div class="col-4">
                            <a href="" class="btn btn-success form-control btn-block">Book</a>
                        </div>
                        <div class="col-4">
                            <span class="">Max Occupancy : @item.Occupancy adults</span><br />
                            <span class="">Area : @item.Area sqft.</span><br />
                        </div>
                        <div class="col-4">
                            <span class="text-warning float-end font-weight-bold pt-1" style="font-size:25px">
                                USD
                                <span style="border-bottom:1px solid #ff6a00">
                                    @item.Rate.ToString("c")
                                </span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>