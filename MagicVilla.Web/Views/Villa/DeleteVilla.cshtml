@model MagicVilla.Web.Models.Villa.VillaViewModel

<form asp-action="DeleteVilla" asp-controller="Villa" method="post">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Villa</h1>
        <hr />
        
        <div class="row">

            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control"/>
            </div>

            <div class="col-2">
                <label asp-for="Rate" class="control-label pt-2" style="font-size:20px"></label>
            </div> 
            <div class="col-10 pb-3">
                <input asp-for="Rate" disabled class="form-control"/>
            </div>

            <div class="col-2">
                <label asp-for="Details" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Details" disabled class="form-control" rows="5"></textarea>
            </div>

            <div class="col-2">
                <label asp-for="ImageUrl" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageUrl" disabled class="form-control"/>
            </div>

            <div class="col-2">
                <label asp-for="Occupancy" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Occupancy" disabled class="form-control"/>
            </div>

            <div class="col-2">
                <label asp-for="Area" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Area" disabled class="form-control"/>
            </div>

            <div class="col-2">
                <label asp-for="Amenities" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Amenities" disabled class="form-control"></textarea>
            </div>
            
            <div class="col-5 offset-2">
                <input type="submit" value="Delete Villa" asp-route-id="@Model.Id" class="btn-danger btn form-control" />
            </div>

            <div class="col-5">
                <a asp-action="VillaIndex" asp-controller="Villa" class="btn-primary btn form-control">Back to List</a>
            </div>

        </div>

    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}