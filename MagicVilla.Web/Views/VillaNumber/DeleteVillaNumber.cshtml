@model MagicVilla.Web.Models.VillaNumber.VillaNumberViewModel

<form asp-action="DeleteVillaNumber" asp-controller="VillaNumber" method="post">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Villa</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="VillaNumber" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNumber" class="form-control" disabled/>
            </div>

            <div class="col-2">
                <label asp-for="SpecialDetails" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="SpecialDetails" class="form-control" rows="5" disabled></textarea>
            </div>
            
            <div class="col-2">
                <label asp-for="Villa.Name" class="control-label pt-2" style="font-size:20px">Villa Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Villa.Name" class="form-control" disabled/>
            </div>

            <div class="col-5 offset-2">
                <input  asp-route-villaNumber="@Model.VillaNumber" type="submit" value="Delete" class="btn-success btn form-control" />
            </div>

            <div class="col-5">
                <a asp-action="VillaIndex" asp-controller="Villa" class="btn-primary btn form-control">Back to List</a>
            </div>
        </div>

    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}